                    </AppBarButton>

                    <AppBarButton x:Uid="Undo" x:Name="Undo" Icon="Undo"/>
                    <AppBarButton x:Uid="Redo" x:Name="Redo" Icon="Redo"/>
                </StackPanel>
            </Grid>

            <RichEditBox x:Name="Texteditor" Grid.Row="1" RequestedTheme="Light" Background="White" Margin="0" />
        </Grid>
    </SplitView>
