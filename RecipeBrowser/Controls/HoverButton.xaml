<UserControl
    x:Class="RecipeBrowser.HoverButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RecipeBrowser"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="40"
    d:DesignWidth="40">

    <Grid x:Name="RootGrid" >
        <Border x:Name="TheButton" FocusVisualPrimaryBrush="Transparent" FocusVisualPrimaryThickness="0" FocusVisualSecondaryBrush="Transparent" FocusVisualSecondaryThickness="0"
                >
            <FontIcon FontFamily="{x:Bind FontFamily, Mode=OneWay}" FontSize="{x:Bind FontSize, Mode=OneWay}" Foreground="{x:Bind Foreground, Mode=OneWay}" Glyph="{x:Bind Glyph, Mode=OneWay}" PointerEntered="FontIcon_PointerEntered" PointerExited="FontIcon_PointerExited" PointerPressed="FontIcon_PointerPressed" PointerReleased="FontIcon_PointerReleased"/>
        </Border>
    </Grid>
</UserControl>
