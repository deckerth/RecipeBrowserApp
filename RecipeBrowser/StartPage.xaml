    <Grid Background="{StaticResource RecipesItemsBackgroundBrush}">

        <Button x:Name="StartButton" x:Uid="SetRootFolder" Content="SetRootFolder" HorizontalAlignment="Center" VerticalAlignment="Center"  FontSize="36" 
